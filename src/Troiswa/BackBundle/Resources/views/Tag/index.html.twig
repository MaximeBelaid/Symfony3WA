{% extends 'TroiswaBackBundle::layout-bo.html.twig' %}

{% block content -%}
    <h1>Tag list</h1>
    {{ wo_render_breadcrumbs() }}
    <div class="count">
        {{ entities.getTotalItemCount }}
    </div>
    <table class="records_list">
        <thead>
        <tr>
            <th>{{ knp_pagination_sortable(entities, 'Nom du tag', 'ta.nom') }}</th>
            <th>Nom</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('tag_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nom }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('tag_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('tag_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(entities) }}
    </div>

    <ul>
        <li>
            <a href="{{ path('tag_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>

{% endblock %}