{%  extends "TroiswaBackBundle::layout-bo.html.twig" %}

{%  block titre %}All{{ parent() }}{% endblock %}

{% block titreContent %}All categories{%  endblock %}

{% block customMessageFlash %}
    <p>La catégorie a bien été supprimée</p>
{% endblock %}

{% block content %}
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Table des catégories</h3>
                <div class="box-tools">
                    <a class="btn btn-primary" href="{{ path("troiswa_back_categorie_create") }}">
                        <i class="fa fa-play"></i> Ajouter
                    </a>
                </div>
            </div><!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">

                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Date</th>
                        <th>Description</th>
                        <th>Etat</th>
                        <th>Actions</th>
                    </tr>
                    {% for key,categorie in categories %}
                    <tr>
                        <td>{{  categorie.id}}</td>
                        <td> {{ categorie.title }}</td>
                        <td>{{ categorie.dateCreated|date("d/m/Y")  }}</td>
                        <td> {{ categorie.description|raw  }}</td>
                        {% if categorie.active %}
                            <td><span class="label label-success">Actif</span></td>
                        {% else %}
                            <td><span class="label label-warning">Inactif</span></td>
                        {% endif %}
                        <td>
                            <div class="box-body">
                                <a class="btn btn-info" href="{{ path("troiswa_back_categorie_show",{id: categorie.id }) }}" >
                                    <i class="fa fa-play"></i> Voir
                                </a>
                                <a class="btn btn-success" href="{{ path("troiswa_back_categorie_edit",{id: categorie.id }) }}">
                                    <i class="fa fa-edit"></i> Editer
                                </a>
                                <a class="btn btn-danger" href="{{ path("troiswa_back_categorie_delete",{id: categorie.id }) }}">
                                    <i class="fa fa-trash"></i> Supprimer
                                </a>
                            <div>
                        </td>
                    </tr>
                    {% endfor %}
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div>
</div>
{% endblock %}

