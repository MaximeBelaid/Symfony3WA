                                </a>
                                <a class="btn btn-danger" href="{{ path("troiswa_back_categorie_delete",{id: categorie.id }) }}">
                                        <i class="fa fa-edit"></i> Supprimer
                                </a>
                        </div><!-- /.box-body -->
                </div><!-- /.box -->
                        <h2><a href="{{ path("troiswa_back_categorie") }}">Back</a></h2>
</div><!-- ./col -->
{% endblock %}
