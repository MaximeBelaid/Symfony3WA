<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Responsive Hover Table</h3>
                <div class="box-tools">
                    <div class="input-group" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control input-sm pull-right" placeholder="Search">
                        <div class="input-group-btn">
                            <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div><!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">

                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Date</th>
                        <th>Description</th>
                        <th>Etat</th>
                        <th>Actions</th>
                    </tr>
                    {% for key,categorie in categories %}
                    <tr>
                        <td>{{  categorie.id}}</td>
                        <td> {{ categorie.title }}</td>
                        <td>{{ categorie.date_created|date("d/m/Y")  }}</td>
                        <td> {{ categorie.description|raw  }}</td>
                        {% if categorie.active %}
                            <td><span class="label label-success">Actif</span></td>
                        {% else %}
                            <td><span class="label label-warning">Inactif</span></td>
                        {% endif %}
                        <td>
                            <div class="box-body">
                                <a  href="{{ path("troiswa_back_categorie_show",{id: categorie.id }) }}" class="btn">
                                    <i class="fa fa-play"></i> Voir
                                </a>
                                <a class="btn ">
                                    <i class="fa fa-edit"></i> Editer
                                </a>
                                <a class="">
                                    <i class="fa fa-trash"></i> Supprimer
                                </a>
                            <div>
                        </td>
                    </tr>
                    {% endfor %}
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div>
</div>
{% endblock %}