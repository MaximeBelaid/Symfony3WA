{%  block titre %}Zoom{{ parent() }}{% endblock %}

{% block titreContent %}Zoom cat√©gore{%  endblock %}

{% block content %}


<div class="col-md-6">
        <div class="box box-solid">
                <div class="box-header with-border">
                        <i class="fa fa-text-width"></i>
                        <h3 class="box-title">{{ categorie.title ~" ("~ categorie.id }})</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                        <blockquote>
                                <p>"{{ categorie.description }}"</p>
                                <p>{{ categorie.position }}</p>
                                <p>{{ categorie.active }}</p>
                                <small>Date <cite title="Source Title">{{ categorie.dateCreated|date("d/m/Y")  }}</cite></small>
                                <br>
                        </blockquote>
                        <div class="box-body">
                                <a class="btn btn-success" href="{{ path("troiswa_back_categorie_edit",{id: categorie.id }) }}">
