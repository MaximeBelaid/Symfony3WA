        <ul>
            {% for key,categorie in categories %}
                <li>
                    Titre : <a href="{{ path("troiswa_back_categorie_show",{id: categorie.id }) }}">{{ categorie.title }}</a> //
                    Description : {{ categorie.description }} //
                    Date : {{ categorie.date_created|date("d/m/Y")  }}
                </li>
            {% endfor %}
        </ul>

        <h3>Active = true</h3>
        <ul>
