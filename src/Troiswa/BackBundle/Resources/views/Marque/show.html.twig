{% extends 'TroiswaBackBundle::layout-bo.html.twig' %}

{% block content -%}

    <h1>Marque</h1>
    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ entity.titre }}</td>
            </tr>
            <tr>
                <th>Tags</th>
                <td>
                    <ul>
                    {% for tag in entity.tags %}
                       <li> {{ tag.nom }} </li>
                    {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('marque') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('marque_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}